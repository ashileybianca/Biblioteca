<%- include('../menus/menu_usuario.html'); %>
<html>
	<head>
		<title>Biblioteca</title>
		<meta charset="UTF-8">
		<link rel="stylesheet" href="../style.css"/>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
	</head>
	<body>

	<div class="title-search">Lista de Livros</div>
	<br><br>
		<div class="nav-guide-usuario">
		<nav class="navbar bg-light">
		<div class="container-fluid">
		<form class="d-flex" action="/filtrarLivroAluno" method="post">
               
            
            <input   class="form-control me-2"  type="text" name="tituloobra" id="tituloobra" size="50" placeholder="Busque um título (use % como caracter coringa)"><br>
           
            <input  class="btn btn-outline-success"  type="submit" name="filtrar" value="Filtrar">
           
        </form>
		
	</div>
	
</nav>

</div>
<br><br>

<form action="/emprestimoLivro" method="post">
	<div class="btn-acao-container">
		<input class="btn-acao-card" type="submit"  value="Selecione o livro e cheque histórico de empréstimos">
		 
		</div>

		<% livros.forEach((li, index) => { %>

	        <div class="card-livro">
            <div class="card" style="width: 18rem;  min-height: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"> <input type="radio" name="idlivros" value="<%= li.idlivros %>"><%= li.tituloobra%></h5>
                  <h6 class="card-subtitle mb-2 text-muted">ID: <%= li.idlivros%></h6>
                  <p class="card-text">Classificação: <%= li.classificacao%><br>Autor(a): <%= li.autorobra%><br>Idioma: <%= li.idioma%>
                  <br>Editora: <%= li.editora%><br>Tipo de mídia: <%= li.tipomidia%> <br>      </p>
			
   
                </div>
              </div>
			</div>

			<% }) %>
	<br>
		<br>	





	
	</body>
</html>

