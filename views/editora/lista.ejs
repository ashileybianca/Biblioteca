<%- include('../menus/menu_admin.html'); %>
<html>
	<head>
		<title>Biblioteca</title>
		<meta charset="UTF-8">
		<link rel="stylesheet" href="../style.css"/>		
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
	</head>
	<body>
	<div class="title-search">Lista de Editoras</div>
	<br><br>
		
		<div class="nav-guide">
		<nav class="navbar bg-light">
		<div class="container-fluid">
		<form class="d-flex" action="/filtrarEditora" method="post">
               
            
            <input   class="form-control me-2"  type="text" name="razaosocial" id="razaosocial" size="50" placeholder="Busque uma editora (use % como caracter coringa)"><br>
           
            <input  class="btn btn-outline-success"  type="submit" name="filtrar" value="Filtrar">
           
        </form>
	</div>
</nav>
</div>
<br>
		<div class="btn-acao-container-1">
		<a href="/formEditoras">Novas Editoras</a><br>
		<a href="/inicio">Voltar para Tela Principal</a>&nbsp;
		</div>

		
		<form action="/gerenciarEditora" method="post">

		<table class="table table-hover" border="1">
			<tr>
				<th>Seleção</th>
                <th>CNPJ</th>
                <th>Razão Social</th>
                <th>Telefone</th>
                <th>Email</th>
			</tr>
	        <% editoras.forEach((e, index) => { %>
			<tr>
				<td><input type="radio" name="cnpj" value="<%= e.cnpj %>"></td>
				<td><%= e.cnpj%></td>
				<td><%= e.razaosocial%></td>
                <td><%= e.telefoneeditora%></td>
                <td><%= e.emaileditora%></td>
			</tr>
			<% }) %>
		</table>
		
		
		<div class="btn-acao-container">
		<input class="btn-acao" type="submit" name="acao" value="Excluir">
		<input class="btn-acao"type="submit" name="acao" value="Atualizar">
		</div>
	</body>
</html>
